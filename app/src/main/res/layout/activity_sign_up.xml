<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="36dp"
                android:src="@drawable/dts_logo" />

            <TextView
                android:id="@+id/nameLabelTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:lineSpacingExtra="14sp"
                android:text="Name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/nameText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:ems="10"
                android:gravity="center|center_vertical"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/usernameLabelTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:lineSpacingExtra="14sp"
                android:text="Username"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/usernameText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:ems="10"
                android:gravity="center|center_vertical"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/passwordLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:lineSpacingExtra="14sp"
                android:text="Password"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passwordValueText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/genderLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:lineSpacingExtra="14sp"
                android:text="Gender"
                android:textSize="18sp" />

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" >

                <RadioButton
                    android:id="@+id/maleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/femaleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />
            </RadioGroup>

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="24dp"
                android:background="#6BABEB"
                android:gravity="center"
                android:text="Sign Up" />

            <TextView
                android:id="@+id/forgotPasswordLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:lineSpacingExtra="14sp"
                android:text="Already have account?"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signInButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="24dp"
                android:background="#6BABEE"
                android:gravity="center"
                android:text="Sign In" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>